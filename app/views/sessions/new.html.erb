<section id="login-wrapper">
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
  <div id="login">
    <h1>Sign in to HeatSync Labs iQ</h1>
    <%= form_tag sessions_path, :method => :post do %>
      <dl>
        <dd><%= text_field_tag :email, nil, :placeholder => "Email address" %></dd>
        <dd><%= password_field_tag :password, nil, :placeholder => "Password" %></dd>
      </dl>
      <p><%= submit_tag 'sign in' %></p>
    <% end%>
  </div>
  <div id="login-info">
    <h2>Not a member? <strong>Learn more</strong> about HeatSync Labs or <strong>sign up</strong>.</h2> 
    <p>
      HeatSync Labs is a 501(c)3 nonprofit workshop which empowers engineers and artists to 
      create and invent while promoting interest in expanding the limits of technology beyond 
      its intended use. Check out our Events page for hours of operation and calendar of events, 
      or the Get Involved page to connect with the community.
    </p>
  </div>
</section>
